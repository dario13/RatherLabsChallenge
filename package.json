{
  "name": "rather-labs-challenge",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/dario13/RatherLabsChallenge.git",
  "author": "dario13",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "hardhat test --network localhost",
    "compile": "hardhat compile",
    "type": "hardhat typechain",
    "copyTasks": "mkdir tasksCopy && cp -r tasks/* tasksCopy && rm -rf tasks && mkdir tasks && touch tasks/index.ts",
    "retrieveTasks": "cp -r tasksCopy/* tasks && rm -rf tasksCopy",
    "postinstall": "yarn copyTasks && yarn type && yarn compile && yarn retrieveTasks",
    "lint": "eslint --fix --ext .ts",
    "format-ts": "prettier --write --no-error-on-unmatched-pattern \"**/*.ts{,x}\"",
    "toolbox": "docker run -it --rm -v $PWD:/src trailofbits/eth-security-toolbox"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.8.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": ">=12.0.0",
    "axios": "^1.2.0",
    "chai": "^4.2.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.29.0",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.2",
    "hardhat-deploy": "^0.11.21",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0"
  }
}
